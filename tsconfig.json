{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "knexfile.ts"],
    "exclude": ["node_modules", "dist"]
}
